<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Contact Button -->
    <ImageButton
        android:id="@+id/btn_contacts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/contacts"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:contentDescription="@string/contact_button"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Camera Button -->
    <ImageButton
        android:id="@+id/btn_camera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/camera"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:contentDescription="@string/camera_button"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toBottomOf="@id/btn_contacts"
        app:layout_constraintBottom_toTopOf="@id/btn_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Map Button -->
    <ImageButton
        android:id="@+id/btn_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/osmap"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:contentDescription="@string/map_button"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toBottomOf="@id/btn_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
